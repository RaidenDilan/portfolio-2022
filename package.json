{
  "name": "raiden-dilan",
  "version": "1.0.1",
  "description": "Raiden Dilan Portfolio",
  "main": "index.js",
  "engines": {
    "node": "8.11.x",
    "npm": "5.6.x"
  },
  "scripts": {
    "postinstall": "bower install && gulp deploy",
    "start": "node index.js",
    "audit": "better-npm-audit audit"
  },
  "author": "Raiden Dilan <raiden18@me.com> (https://github.com/raidendilan)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/raidendilan/portfolio.git"
  },
  "gulp": {
    "srcDir": "src/",
    "destDir": "public/",
    "src": {
      "js": "src/js/",
      "scss": "src/scss/",
      "fonts": "src/fonts/",
      "images": "src/images/",
      "views": "src/views/"
    },
    "dest": {
      "js": "public/js/",
      "css": "public/css/",
      "fonts": "public/fonts/",
      "images": "public/images/",
      "views": "public/views/"
    },
    "main": {
      "js": "app.js",
      "index": "index.html",
      "scss": "style.scss",
      "server": "index.js",
      "gulpfile": "gulpfile.js",
      "packageJson": "package.json"
    },
    "vendor": {
      "js": "vendor.js",
      "css": "vendor.css",
      "pixijs": "pixi.js",
      "gsap": "TweenMax.js",
      "lethargyjs": "lethargy.js",
      "preloadjs": "preloadjs.js",
      "smoothscrolling": "smooth-scrolling.js"
    },
    "output": {
      "js": "app.js",
      "css": "style.css",
      "vendor": "vendor.js"
    },
    "selectors": {
      "all": "*",
      "js": "**/*.js",
      "css": "**/*.css",
      "scss": "**/*.scss",
      "html": "**/*.html",
      "pixi": "**/pixi.js",
      "images": "**/*.{png,jpg,jpeg,gif,ico,svg}",
      "fonts": "**/*.{eot,svg,ttf,woff,woff2}"
    }
  },
  "browserslist": [
    "last 2 version",
    "safari >= 10",
    "ie 8",
    "ie 9",
    "opera 12.1",
    "ios 10",
    "android 4"
  ],
  "dependencies": {
    "ejs": "^3.0.2",
    "express": "^4.14.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "better-npm-audit": "^3.7.3",
    "bower": "^1.8.0",
    "browser-sync": "^2.17.6",
    "eslint": "^8.32.0",
    "event-stream": "^4.0.1",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-htmlhint": "4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-inject": "^5.0.5",
    "gulp-jshint": "^2.1.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-nodemon": "^2.5.0",
    "gulp-notify": "4.0.0",
    "gulp-order": "^1.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-strip-comments": "2.5.2",
    "gulp-strip-css-comments": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "htmlhint-stylish": "^1.0.3",
    "jshint": "^2.9.4",
    "jshint-stylish": "^2.2.1",
    "main-bower-files": "^2.13.1",
    "require-dir": "^1.2.0",
    "sass": "^1.57.1"
  }
}
